@model IEnumerable<Umtahan_programii.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Şagirdlər</h1>

<p>
    <a asp-action="Create">Yeni Şagird Daxil Edin!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameOfStudent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurnameOfStudent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurnameOfStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId">Redaktə et</a> |
                <a asp-action="Details" asp-route-id="@item.StudentId">Detallar</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
